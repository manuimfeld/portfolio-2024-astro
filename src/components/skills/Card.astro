---
interface Props {
  skills: string;
}

const { skills } = Astro.props;
---
<div class="flex flex-col items-center justify-start w-64 h-fit bg-black/30 backdrop-blur-lg rounded-lg shadow-lg border border-white/20 p-6">
    <p class="text-xl font-semibold text-white">{skills}</p>
  <ul class="w-full flex flex-wrap justify-between">
    <slot />
  </ul>
</div>