---
interface Props {
  skills: string;
}

const { skills } = Astro.props;
---

<div
  class="flex flex-col items-center justify-start w-full h-fit bg-black/30 backdrop-blur-lg rounded-lg shadow-lg p-6"
>
  <p class="text-xl font-semibold text-white">{skills}</p>
  <ul class="w-full flex flex-wrap justify-around gap-0.5">
    <slot />
  </ul>
</div>
